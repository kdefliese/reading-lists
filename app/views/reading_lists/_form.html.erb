<div class="container">
  <%= form_for @reading_list do |f| %>
      <%= f.label "Name:" %>
      <%= f.text_field :name %>
      <%= f.submit value: "#{button_text}", class: "new_button"%>
  <% end %>

  <% if !@reading_list.books.nil? %>
    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Author</th>
          <th></th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @reading_list.books.each do |book| %>
          <tr>
            <td>  <a href="/books/<%= book.id %>"><%= book.title %></td>
            <td><%= book.author %> </td>
            <td><%= button_to "Remove from list", book_remove_path(book.id), class:"new_button" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>


</div>
